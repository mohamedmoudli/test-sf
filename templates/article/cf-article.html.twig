{% extends 'base.html.twig' %}

{% block title %}Edit Article{% endblock %}

{% block body %}



<body>

<div class="container">
    <div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
        <div class="row">
        <div class="col-md-6 px-0">
            <h1 class="display-4 font-italic">{{ article.title }}</h1>
            <p class="lead my-3">{{ article.text }}</p>

        </div>
        <div class="col-md-6 px-0">
            <img class="card-img-right flex-auto d-none d-md-block"  src="{{ '/images/article/' ~ article.image }}"
              width="400px" height="250px"   alt="Card image cap">
        </div>
        </div>
    </div>


</div>
<main role="main" class="container">
</main><!-- /.container -->
<footer class="blog-footer">
    <p>Test technique par VOTRE NOM ET PRENOM (c) {{ article.date|date('Y-m-d') }}</p>

</footer>
